<?xml version='1.0'?> 
<document>

<config>
	<param name="activationLevel" value="7"/>
	<param name="activationUrl" value="*"/>
	<param name="baseUrl" value="/search/"/>
    <param name="adminMenu" value="1"/>
    <param name="adminMenuOrder" value="41"/>
    
	<filter url="/search/" action="Get_Search_List"/>
    
    <api name="more_search" action="ajax_More_Search"/>
    
    <param name="installHook" value="SearchInstall"/>
    
    <constant name="TABLE_SEARCH" value="search"/>
    
    <table name="search" index="id" title="name">
		<field name="id" type="id"/>
		<field name="published" type="published"/>
		<field name="deleted" type="deleted"/>
		<field name="author" type="author"/>
		<field name="updated" type="datetime"/>
		<field name="lang" type="lang" listskip="1"/>
		<field name="ip" type="str"/>
		<field name="search_txt" type="str"/>
		<field name="count" type="bool"/>
	</table>
    
</config>

<install>
	<param name="name" value="search"/>
	<param name="version" value="1.0"/>
	<param name="date" value="04.01.2017"/>
	<param name="title" value="Поиск по сайту"/>
	<param name="description" value="Поиск по сайту"/>
	
	<dependency module="core" version="1.0" />
    
	<file dir="module" path="search/search.php"/>
	<file dir="module" path="search/config.xml"/>
    
    
	<file dir="template" path="default/site-search.tpl"/>
	<file dir="content" path="css/search.css"/>
	<file dir="content" path="js/search.js"/>
    
</install>

<locales>
	<locale name="ru">
		<field name="module.search" value="Результаты поиска"/>
		<field name="table.search" value="Поисковые запросы"/>
		<field name="table.search.id" value="ID"/>
		<field name="table.search.published" value="Активно"/>
		<field name="table.search.deleted" value="Удалено"/>
		<field name="table.search.author" value="Автор"/>
		<field name="table.search.updated" value="Обновлено"/>
		<field name="table.search.lang" value="Язык"/>
		<field name="table.search.ip" value="ID пользователя"/>
		<field name="table.search.search_txt" value="Поисковый запрос"/>
		<field name="table.search.count" value="Результативность поиска"/>
		<field name="search.btn_search" value="Найти"/>
		<field name="search.label_search_err" value="По ключевому слову «search_str» ничего не найдено."/>
		<field name="search.more_search" value="Больше результатов поиска"/>
		<field name="search.label_search_count" value="Найдено результатов:"/>
        
	</locale>
    <locale name="ua">
		<field name="module.search" value="Результаты поиска"/>
		<field name="table.search" value="Поисковые запросы"/>
		<field name="table.search.id" value="ID"/>
		<field name="table.search.published" value="Активно"/>
		<field name="table.search.deleted" value="Удалено"/>
		<field name="table.search.author" value="Автор"/>
		<field name="table.search.updated" value="Обновлено"/>
		<field name="table.search.lang" value="Язык"/>
		<field name="table.search.ip" value="ID пользователя"/>
		<field name="table.search.search_txt" value="Поисковый запрос"/>
		<field name="table.search.count" value="Результативность поиска"/>
        <field name="search.btn_search" value="Шукати"/>
		<field name="search.label_search_err" value="За ключовим словом «search_str» нічого не знайдено."/>
		<field name="search.more_search" value="Більше результатів пошуку"/>
        <field name="search.label_search_count" value="Знайдено результатів:"/>
	</locale>
	
</locales>


</document>