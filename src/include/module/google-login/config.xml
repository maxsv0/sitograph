<?xml version='1.0'?>
<document>

<config>
	<param name="activationUrl" value="*"/>
	<param name="activationLevel" value="2"/>
	<param name="adminMenu" value="0"/>
</config>

<install>
	<param name="name" value="google-login" />
	<param name="version" value="1.0.3"/>
	<param name="date" value="24.02.2018"/>
	<param name="title" value="Google - Login"/>
	<param name="description" value="Google auth service. Allows to sing up or log in using Google account"/>
	<param name="tags" value="google,auth"/>
	<param name="author" value="max@msvhost.com"/>
	<param name="preview" value="images/module_preview_google-login.jpg"/>

	<param name="installHook" value="Install_GoogleLogin"/>

	<dependency module="msv-core" version="1.0" />

	<file dir="module" path="google-login/google-login.php"/>
	<file dir="module" path="google-login/config.xml"/>
	<file dir="content" path="images/btn_google_signin.png"/>
</install>

<locales>
	<locale name="en">
		<field name="settings.google_client_secrets_json" value="Google Client Secret authentication JSON file path"/>
	</locale>
	<locale name="ru">
		<field name="settings.google_client_secrets_json" value="Путь к JSON файлу авторизации Google Client Secret"/>
	</locale>
</locales>
</document>